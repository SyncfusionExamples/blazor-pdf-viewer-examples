            .scroller::-webkit-scrollbar-thumb {
                box-shadow: inset 0 0 0 10px #313C75;
                border-radius: 4px;
            }

            .scroller::-webkit-scrollbar-track {
                width: 28px;
            }
	    .separator{
           border:1px solid #FFFFFF;
